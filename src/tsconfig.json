{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["dom", "ES2015", "ES2016"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["es6-promise"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "typeRoots": [
      "./src/declaration.d.ts",
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  }
}
